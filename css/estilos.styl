@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = o ms moz webkit official

body
	font-size 16px
	width 100%

	header
		float left
		height 992px
		position relative
		width 100%

		#fondos
			height 100%
			position absolute
			width 100%

			img
				display none
				height 100%
				left 0
				position absolute
				top 0
				width 100%

		nav
			background url("../img/nav.png")
			display inline-block
			height 130px
			position absolute
			text-align center
			width 100%

			ul
				display inline-block
				float right
				list-style none
				margin 0
				padding 0 2em 0 0
				height 100%

				li
					float left
					display list-item
					margin 2.5em 0

					a
						color white
						font-size 1.4em
						text-decoration none 
						transition .3s linear

					a:hover
						text-shadow -1px 1px 8px #ffc, 1px -1px 8px #fff

					span
						background black
						border-radius 1em
						display block
						float left
						height 6em
						margin -1.5em 1em 0 1em
						width 1px


			#logo
				background red
				float left
				height 130px
				width 17em

		#logo-animado
			animation la 1s
			border solid black
			border-radius 1em
			height 62%
			margin 17% 0 0 5%
			position absolute
			width 35%

		#info-animado
			animation ia 1s
			height 40%
			margin 25% 0 0 45%
			position absolute
			width 50%

			img
				height 100%
				width 100%


