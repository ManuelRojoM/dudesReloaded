#contacto
	background url("../img/contacto.png")
	display inline-block
	height 1000px
	position relative
	width 100%
	margin -.3em 0 -.3em 0

#contacto-interior
	display inline-block
	width 100%
	top 13em
	height 70%
	position relative

	#numeros-info
		display inline-block
		position absolute
		width 30%
		height 80%
		background blue
		left 3em

	#form-contacto
		display inline-block
		position absolute
		width 60%
		height 80%

		left 30em

		.campoTexto
			display inline-block
			background rgba(243,243,243, 0.9)
			border 1px solid #e5e5e5
			border-radius 5px
			color #aaa
			font-size 1em
			margin 1em 0 1em 1em
			padding 1px 4px
			height 45px
			outline:none;
			width 280px

		.campoTexto:focus
			background #f9f9f9
			box-shadow 0px 0px 12px rgb(255, 255, 255)

		textarea
			background rgba(243, 243, 243, 0.9)
			border 1px solid #ddd
			border-radius: 5px
			display block
			padding 5px 5px
			margin-left 1em
			max-width 77%
			max-height 350px
			width 77%
			height 350px
			font-size inherit
			font-family arial
			outline inherit
			transition 0.2s all ease-in

		textarea:focus
			background #f9f9f9
			box-shadow 0px 0px 12px rgb(255, 255, 255)

		input[type="submit"] 
			opacity 0.7
			width 200px
			height 50px
			border none
			margin 1em 0 0 23.1em
			font-size 18px
			background #40b2e4
			border-radius 5px
			cursor pointer
			transition 0.2s all ease-in

		input[type="submit"]:hover
			background orange

		input[type="submit"]:active
			box-shadow inset 0px 2px 4px #2c7c9f
 			transition 0.04s all ease-in-out

.descripcion
	left 3em
	position absolute
	top 1em
	width 40%
	height 20%
	color white

	h1
		font-size 3em
		width 100%




.activa
	text-shadow -1px 1px 8px #ffc, 1px -1px 8px #fff

.anima
	animation an 1s



/*
	Aqu√≠ van los Keyframes
*/

@keyframes la {
  from {
    margin: 17% 0 0 100em
  }
  to {
    margin: 17% 0 0 5%
  }
}

@keyframes ia {
  from {
    margin: 70em 0 0 38em
  }
  to {
    margin: 25% 0 0 45%
  }
}

@keyframes an {
  0% {
	transform: rotate(0deg)
  }
  30% {
	transform: rotate(30deg)
  }
  60% {
    transform: rotate(-20deg)
  }
  100% {
	transform: rotate(0deg)
  }
}

