		height 25em
		margin -1.2em .5em 0 .5em
		text-align center

		.nom
			position absolute
			width 17em
			height 5em
			margin 2em .5em
			text-align center

			h3,h4
				margin .5em

		.habilidad
			position absolute
			width 17em
			height 16em
			margin 7em .5em
			text-align center

			p
				margin 1.5em 1.5em

		.red-personal
			width 17em
